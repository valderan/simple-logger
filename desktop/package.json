{
  "name": "simple-logger-desktop",
  "version": "1.1.0",
  "description": "Electron desktop shell for the Simple Logger web client.",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "dev": "node scripts/run-electron.js --dev",
    "start": "node scripts/run-electron.js",
    "sync:web": "node scripts/sync-web-dist.js",
    "build": "npm run sync:web && electron-builder",
    "build:linux": "npm run sync:web && electron-builder --linux",
    "build:win": "npm run sync:web && electron-builder --win",
    "build:mac": "npm run sync:web && electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.simplelogger.desktop",
    "productName": "Simple Logger Desktop",
    "files": [
      "main.js",
      "preload.js",
      "web-dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    }
  }
}
